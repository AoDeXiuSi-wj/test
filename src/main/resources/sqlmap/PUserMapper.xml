
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.springmvc.dao.PUserDao">

    <parameterMap id="parameterMap" type="com.springmvc.entity.PUser"></parameterMap>
    <resultMap id="resultMap" type="com.springmvc.entity.PUser">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>

    <sql id="columnSql">
        <trim suffixOverrides=",">
            t.id,
            t.username,
            t.password,
        </trim>
    </sql>

    <select id="findByUsernameAndPwd" resultMap="resultMap">
        SELECT
        <include refid="columnSql"></include>
        FROM p_user t
        WHERE t.username = #{username} and t.password = #{password}
    </select>
</mapper>